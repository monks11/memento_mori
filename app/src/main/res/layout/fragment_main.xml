<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonShareTimeMainActivity"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Share time"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:gravity="clip_horizontal|center_vertical"
            android:drawableLeft="@drawable/image_share_time_button" />
        <Button
            android:id="@+id/buttonGetTimeMainActivity"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Get time"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:gravity="clip_horizontal|center_vertical"
            android:drawableLeft="@drawable/image_get_time_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonStatisticsMainActivity"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Statistics"
            android:textAllCaps="false"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/buttonInfoMainActivity"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Info"
            android:textAllCaps="false"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_on_main_activities"
        android:textSize="@dimen/size_text_headline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heartbeatsViewMainActivity"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/size_text_headline"
        android:text="@string/heartbeats_to_win"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartMainActivity"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center">

        </com.github.mikephil.charting.charts.PieChart>

        <!--<ImageView-->
        <!--android:id="@+id/imageViewHeart"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_gravity="center" />-->
        <ImageButton
            android:id="@+id/buttonImageViewHeart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
    </FrameLayout>

</LinearLayout>